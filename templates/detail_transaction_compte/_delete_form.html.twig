<!-- Le bouton "Supprimer" qui déclenche l'ouverture du modal -->
<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#deleteModal">
    Supprimer
</button>

<!-- Modal de confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Voulez-vous vraiment supprimer cet élément ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <!-- Le bouton qui soumet le formulaire -->
                <form method="post"
                      action="{{ path('app_detail_transaction_compte_delete', {'id': detail_transaction_compte.id}) }}">
                    <input type="hidden" name="_token"
                           value="{{ csrf_token('delete' ~ detail_transaction_compte.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
