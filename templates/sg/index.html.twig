{% extends 'base.html.twig' %}

{% block title %}Gestion des rôles: listes{% endblock %}

{# {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/gestion_utilisateur.css') }}">
{% endblock %} #}

{% block page_title %}
    SG
{% endblock %}
{% block page_subtitle %}
    {# Liste des demandes en attente de validation #}
{% endblock %}



{% block page_main_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Liste des demandes en attente de validation</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Date de demande</th>
                                    <th>Rérence</th>
                                    <th>Type de demande</th>
                                    <th>Montant</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for demande_type in demande_types %}
                                <tr>
                                    <td>{{ demande_type.dm_date|date('d-m-Y') }}</td>
                                    <td>{{ demande_type.ref_demande }}</td>
                                    <td>{{ demande_type.demande.libelle }}</td>
                                    <td class="text-end" >
                                        <div>
                                            {{ demande_type.dm_montant|number_format(2, '.', ' ') }} Ar
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-12 d-flex gap-5">
                                            <div class="col-9">
                                                <a href="{{ path('app_groupe_utilisateur_show', {'id': demande_type.dm_id}) }}" class="btn btn-label-success btn-sm">VALIDER</a>
                                                <a href="{{ path('app_groupe_utilisateur_edit', {'id': demande_type.dm_id}) }}" class="btn btn-label-danger btn-sm">REFUSER</a>
                                            </div>
                                            <div class="col-2">
                                                <button style="width: 100%;height: 100%;border: none">
                                                    {{ux_icon('heroicons:information-circle', {height: '70%', width:'70%',color:'#2a2f5b'}) }}
                                                </button>
                                            </div>

                                        </div>
                                    </td>

                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">aucun donnée inserer</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



{% block js_script %}
    <!-- Datatables -->
    <script src="{{ asset("js/plugin/datatables/datatables.min.js") }}"></script>


{% endblock %}