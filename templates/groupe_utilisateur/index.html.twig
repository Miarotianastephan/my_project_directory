{% extends 'base.html.twig' %}

{% block title %}Gestion des rôles: listes{% endblock %}
{% block page_title %}Back-Office {% endblock %}
{% block page_subtitle %}Page gestion des rôles{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/scr/scr_index_role.js") }}"></script>
{% endblock %}

{# {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/gestion_utilisateur.css') }}">
{% endblock %} #}


{# Bouton d'action #}
{% block page_options %}
    <a href="{{ path("app_groupe_utilisateur_new") }}" class="btn btn-label-secondary">Créer un rôle</a>
{% endblock %}

{% block page_main_content %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Table des rôles</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Libelle</th>
                                        <th>Niveau</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for groupe_utilisateur in groupe_utilisateurs %}
                                    <tr>
                                        <td>{{ groupe_utilisateur.id }}</td>
                                        <td>{{ groupe_utilisateur.grpLibelle }}</td>
                                        <td>{{ groupe_utilisateur.grpNiveau }}</td>
                                        <td>
                                            <a href="{{ path('app_groupe_utilisateur_show', {'id': groupe_utilisateur.id}) }}" class="btn btn-label-primary btn-sm">voir</a>
                                            <a href="{{ path('app_groupe_utilisateur_edit', {'id': groupe_utilisateur.id}) }}" class="btn btn-label-primary btn-sm">modifier</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">aucun donnée inserer</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}