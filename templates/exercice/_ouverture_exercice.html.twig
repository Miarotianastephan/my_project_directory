<!-- Modal pour mise à jour du montant -->
<div class="modal fade" id="ouvertureModal" tabindex="-1" aria-labelledby="ouvertureModal"
     aria-hidden="true">
    <div class="modal-dialog">
        <form id="ouvrir" action="{{ path('tresorier.modifier_budget') }}" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ouvertureModalLabel">Utilisr cette exercice comme exercice actuelle?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body card-body col-12 d-flex flex-column gap-2">
                    <!-- Message de mise à jour du formulaire sera inséré ici -->
                    <div class="form-group col-10 d-flex flex-row">
                        <label class="col" for="id-input"> Exercice id: </label>
                        <input type="number" id="id-input" name="id" class="form-control col" readonly>
                    </div>
                    <div class="form-group col-10 d-flex flex-row">
                        <label class="col" for="date-debut-input"> Date de debut: </label>
                        <input type="date" id="date-debut-input" name="date-debut" class="form-control col" readonly>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="non" name="non" data-bs-dismiss="modal" class="btn btn-danger">NON
                    </button>
                    <button type="button" id="oui" name="oui" class="btn btn-success">OUVRIR</button>
                </div>
            </div>
        </form>
    </div>
</div>