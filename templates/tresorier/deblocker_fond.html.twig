{% extends 'base.html.twig' %}

{% block title %}BFM Application de comptabilité en intranet{% endblock %}
{% block page_title %}
    Section Trésorier
{% endblock %}
{% block page_subtitle %}
    {# Liste des demandes en attente de validation #}
{% endblock %}

{% block page_main_content %}
    <div class="row">
        <div class="col-md-12">
            <form id="formulaire" action="{{ path('tresorier.remettre_fond', {'id': demande_type.Id}) }}"
                  data-cancel="{{ path('tresorier.liste_demande_en_attente') }}">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">REMETTRE LE FOND</h4>
                        {{ include('include/_budget_et_solde.html.twig') }}
                    </div>
                    <div class="card-body">
                        <div class="col px-3 d-flex flex-column gap-3">
                            <div class="row form-group gy-3">
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg"> Remettant: </label>
                                    <div class="col form-control">
                                        {{ demande_type.utilisateur.UserMatricule }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg"> Rérérence: </label>
                                    <div class="col form-control">
                                        {{ demande_type.RefDemande }}
                                    </div>
                                </div>

                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg">Type de paiement:</label>
                                    <div class="col form-control">{{ demande_type.DmModePaiement == 1 ? 'Chèques':'Espèces' }}</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg"> Montant de la demande: </label>
                                    <div class="col form-control">
                                        {{ demande_type.DmMontant|number_format(2, '.', ' ') }} Ar
                                    </div>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg"> Motif de la demande: </label>
                                    <div class="col form-control">
                                        {{ demande_type.PlanCompte.CptNumero }} - {{ demande_type.PlanCompte.CptLibelle }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-3 form-control-lg"> Type de demande: </label>
                                    <div class="col form-control">
                                        {{ demande_type.Demande.Libelle }}
                                    </div>
                                </div>
                            </div>
                            <div class="btn btn-primary"> Ajouter une observation</div>
                            {{ demande_type.DmModePaiement == 1 ? include('chequier/utiliser.html.twig'):"" }}

                        </div>
                    </div>
                    <div class="card-footer py-3 px-5 d-grid gap-2 d-md-flex justify-content-md-end">
                        <button id="annuler"  type="button" class="btn btn-danger btn">Annuler</button>
                        <button id="valider" data-paiement="{{ demande_type.DmModePaiement }}" type="submit" class="btn btn-success btn">Valider</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {{ include('include/_message_modal.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/scr/tresorier/deblocker_fond.js") }}"></script>
{% endblock %}