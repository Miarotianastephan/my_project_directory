{% extends 'base.html.twig' %}

{% block title %}BFM Application de comptabilité en intranet{% endblock %}

{% block page_title %}
    Section Trésorier
{% endblock %}

{% block page_subtitle %}
    Enregistrement d'approvisionnement au niveau de la caisse.
{% endblock %}

{% block page_main_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Remplissez ce formulaire d'approvisionnement</h4>
                </div>
                <form id="formulaire" action="{{ path('tresorier.save_approvisionnement') }}" method="post"
                      data-cancel="{{ path('tresorier.liste_demande_en_attente') }}">
                    <div class="card-body">
                        <div class="row form-group">
                            <div class="col">
                                <label for="montant">Montant</label>
                                <div class="input-group">
                                    <span class="input-group-text">Ar</span>
                                    <input
                                            id="dm_montant"
                                            name="dm_montant"
                                            type="number"
                                            step="0.01"
                                            class="form-control"
                                            aria-label="montant"
                                    />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="date_operation">Date de l'opération</label>
                                <input type="date" id="date_operation" name="date_operation" class="form-control"
                                       value="{{ 'now'|date('Y-m-d') }}">
                            </div>
                            <div class="col-md-3">
                                <label for="date_saisie">Date de saisie</label>
                                <input readonly type="date" id="date_saisie" name="date_saisie" class="form-control"
                                       value="{{ 'now'|date('Y-m-d') }}">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col">
                                <label for="id_plan_compte_debit">Choix de la caisse à approvisionner</label>
                                <select name="id_plan_compte_debit" class="form-control" id="id_plan_compte_debit">
                                    {% for entite in entites %}
                                        <option value="{{ entite.Id }}">{{ entite.CptNumero }}
                                            - {{ entite.CptLibelle }}</option>
                                    {% else %}
                                        <option disabled>Ajouter des données</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col">
                                <label for="caisse">Situation de la caisse (Solde)</label>
                                <div class="input-group">
                                    <span class="input-group-text">Ar</span>
                                    <input
                                            id="caisse"
                                            name="caisse"
                                            type="text"
                                            class="form-control"
                                            aria-label="caisse"
                                            value="{{ situation_caisse|number_format(2, '.', ' ') }}" readonly
                                    />
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                                <div class="col">
                                    <label class="form-label">Mode de paiement</label>
                                    <div class="selectgroup w-100">
                                        <label class="selectgroup-item">
                                            <input
                                                    id="mode_paiement"
                                                    type="radio"
                                                    name="mode_paiement"
                                                    value="1"
                                                    class="selectgroup-input"
                                                    checked="checked"
                                            />
                                            <span class="selectgroup-button">Par chèques (Retrait à la banque)</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="dm_piece">Insérer une pièce jointe</label>
                                    <input disabled type="file" name="dm_piece" class="form-control" id="dm_piece"/>
                                </div>
                        </div>
                    </div>
                    <div class="card-footer d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" id="annuler" class="btn btn-secondary">Annuler</button>
                        <button type="submit" id="valider" class="btn btn-primary">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messageModalLabel">Message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Message will be inserted here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/scr/tresorier/demande_approvisionnement.js") }}"></script>
{% endblock %}
