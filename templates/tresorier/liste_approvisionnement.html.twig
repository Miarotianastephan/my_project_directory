{% extends 'base.html.twig' %}

{% block title %}Approvisionnement{% endblock %}

{% block page_title %}
    Trésorier
{% endblock %}
{% block page_subtitle %}
    Les opérations d'approvisionnements effectués
{% endblock %}



{% block page_main_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Les approvisionnements réalisées</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                            <tr class="col-12">
                                <th class="col-2">Validation demande</th>
                                <th class="col-1">Référence</th>
                                <th class="col-3">Type de demande</th>
                                <th class="col-2 text-end px-3">Montant</th>
                                <th class="text-end col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for demande_type in liste_approvisio %}
                                <tr class="col-12">
                                    <td class="col-2">{{ demande_type.DmDate|date('d/m/y')|trans({}, 'fr') }}</td>
                                    <td class="col-1">{{ demande_type.RefDemande }}</td>
                                    <td class="col-3">{{ demande_type.Demande.Libelle }}</td>
                                    <td class="text-end col-2">
                                        <div>
                                            {{ demande_type.DmMontant|number_format(0, '.', ' ') }} Ar
                                        </div>
                                    </td>
                                    <td class="text-end col">
                                        <div class="col-12 d-flex gap-2">
                                            <div class="col-4">
                                                <button style="width: 100%;height: 100%;border: none;background-color: transparent">
                                                    <a href="{{ path('tresorier.detail_demande_en_attente', {'id': demande_type.Id}) }}">
                                                        {{ ux_icon('heroicons:information-circle', {height: '70%', width:'70%',color:'#2a2f5b'}) }}
                                                    </a>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucun donnée inserer</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
