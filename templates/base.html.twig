<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta
            content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
            name="viewport"
        />
        <link
            rel="icon"
            href="{{ asset('img/app_ico.ico') }}"
            type="image/x-icon"
        />
        <!-- Fonts and icons -->
        <link rel="stylesheet" href={{ asset("css/all.min.css") }} />

        <!-- CSS Files -->
        <link rel="stylesheet" href={{ asset("css/bootstrap.min.css") }} />
        <link rel="stylesheet" href={{ asset("css/plugins.min.css") }} />
        <link rel="stylesheet" href={{ asset("css/kaiadmin.min.css") }} />
        <link rel="stylesheet" href={{ asset("css/base_perso.css") }} />
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="wrapper">
            {# SIDEBAR #}
            {% include 'pages/sidebar.html.twig' %}
            
            <div class="main-panel">
                <div class="main-header">
                    <div class="main-header-logo">
                        <!-- Logo Header -->
                        <div class="logo-header" data-background-color="light_logo">
                            <a href="index.html" class="logo">
                                <img src="{{ asset("img/app_logo.png") }}" alt="navbar brand"
                                class="navbar-brand" height="70" width="80"
                                />
                            </a>
                            <div class="nav-toggle">
                                <button class="btn btn-toggle toggle-sidebar">
                                <i class="gg-menu-right"></i>
                                </button>
                                <button class="btn btn-toggle sidenav-toggler">
                                <i class="gg-menu-left"></i>
                                </button>
                            </div>
                            <button class="topbar-toggler more">
                                <i class="gg-more-vertical-alt"></i>
                            </button>
                        </div>
                        <!-- End Logo Header -->
                    </div>
                    {# HEADER CONTENT#}
                    {% include 'pages/header.html.twig' %}
                </div>

                <div class="container">
                    <div class="page-inner">
                        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
                            <div>
                                {# titre et sous-titre de la page #}
                                <h3 class="fw-bold mb-3">{% block page_title %}Titre de la page{% endblock %}</h3>
                                <h6 class="op-7 mb-2">{% block page_subtitle %}Sous-titre de la page{% endblock %}</h6>
                            </div>
                            <div class="ms-md-auto py-2 py-md-0">
                                {% block page_options %}
                                    {# <a href="#" class="btn btn-label-info btn-round me-2">option 1</a>
                                    <a href="#" class="btn btn-primary btn-round">option 2</a> #}
                                {% endblock %}
                            </div>
                        </div>
                        {# contenue principale #}
                        {% block page_main_content %}
                            <div class="row">
                                <div class="col-sm-6 col-md-3">
                                    <div class="card card-stats card-round">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-icon">
                                                    <div class="icon-big text-center icon-primary bubble-shadow-small" >
                                                    <i class="fas fa-users"></i>
                                                    </div>
                                                </div>
                                                <div class="col col-stats ms-3 ms-sm-0">
                                                    <div class="numbers">
                                                    <p class="card-category">Visitors</p>
                                                    <h4 class="card-title">1,294</h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="card card-stats card-round">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div
                                            class="icon-big text-center icon-info bubble-shadow-small"
                                            >
                                            <i class="fas fa-user-check"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ms-3 ms-sm-0">
                                            <div class="numbers">
                                            <p class="card-category">Subscribers</p>
                                            <h4 class="card-title">1303</h4>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="card card-stats card-round">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div
                                            class="icon-big text-center icon-success bubble-shadow-small"
                                            >
                                            <i class="fas fa-luggage-cart"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ms-3 ms-sm-0">
                                            <div class="numbers">
                                            <p class="card-category">Sales</p>
                                            <h4 class="card-title">$ 1,345</h4>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <div class="card card-stats card-round">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div
                                            class="icon-big text-center icon-secondary bubble-shadow-small"
                                            >
                                            <i class="far fa-check-circle"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ms-3 ms-sm-0">
                                            <div class="numbers">
                                            <p class="card-category">Order</p>
                                            <h4 class="card-title">576</h4>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
                
                {# FOOTER #}
                {% include 'pages/footer.html.twig' %}
            </div>
            {# FIN SIDEBAR #}
        </div>
        {% endblock %}

        
        
        {# CORE Js Files #}
        <script src="{{ asset("js/core/jquery-3.7.1.min.js") }}"></script>
        <script src="{{ asset("js/core/popper.min.js") }}"></script>
        <script src="{{ asset("js/core/bootstrap.min.js") }}"></script>
        <!-- Bootstrap Notify -->
        <script src="{{ asset("js/plugin/bootstrap-notify/bootstrap-notify.min.js") }}"></script>
        <!-- jQuery Scrollbar -->
        <script src="{{ asset("js/plugin/jquery-scrollbar/jquery.scrollbar.min.js") }}"></script>
        <!-- Chart Circle --> 
        <script src="{{ asset("js/plugin/chart-circle/circles.min.js") }}"></script>
        <!-- Sweet Alert -->
        <script src="{{ asset("js/plugin/sweetalert/sweetalert.min.js") }}"></script>
        <!-- Kaiadmin JS -->
        <script src="{{ asset("js/kaiadmin.min.js") }}"></script>
        {% block js_script %}
            
        {% endblock %}
    </body>
</html>
