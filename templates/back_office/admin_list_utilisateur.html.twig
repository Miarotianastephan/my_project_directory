{% extends 'base.html.twig' %}

{% block title %}BFM Application de comptabilité en intranet{% endblock %}
{% block page_title %}Back-Office{% endblock %}
{% block page_subtitle %}Page liste des utilisateurs{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/scr/scr_admin_list_user.js") }}"></script>
{% endblock %}

{% block page_main_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Tables utilisateurs</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            {# Column #}
                            <thead>
                                <tr>
                                    <th>Matricule</th>
                                    <th>Groupe occupé</th>
                                    <th>Date ajout</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Matricule</th>
                                    <th>Groupe occupé</th>
                                    <th>Date ajout</th>
                                </tr>
                            </tfoot>
                            {# Data #}
                            <tbody>
                            {% for usr in utilisateurs %}
                                <tr>
                                    <td>{{usr.userMatricule}}</td>
                                    <td>{{usr.groupUtilisateur.grpLibelle}}</td>
                                    <td>{{usr.dateAjout|date('Y/m/d')}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}