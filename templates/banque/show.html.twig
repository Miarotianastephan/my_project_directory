{% extends 'base.html.twig' %}

{% block title %}BFM Application de comptabilité en intranet{% endblock %}
{% block page_title %}
    Section Admin
{% endblock %}
{% block page_subtitle %}
    {# Liste des demandes en attente de validation #}
{% endblock %}
{% block page_options %}
    {{ include('banque/_delete_form.html.twig') }}
{% endblock %}


{% block page_main_content %}
    <div class="row align-items-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Information la banque</h4>
                </div>
                <div class="card-body col-12 px-md-5 d-flex flex-row">
                    <div class="col-1">
                        <button style="border: none;background-color: transparent; text-align: start">
                            <a title="Retour à la liste" href="{{ path('app_banque_index') }}">
                                {{ ux_icon('heroicons:arrow-left-circle', {height: '60%', width:'75%',color:'#2a2f5b'}) }}
                            </a>
                        </button>
                    </div>
                    <div class="col px-3 d-flex flex-column gap-3">
                        <div class="col-12 d-flex flex-row">
                            <label class="col-4 form-control-lg"> Id </label>
                            <div class="col form-control">{{ banque.id }}</div>
                        </div>
                        <div class="col-12 d-flex flex-row">
                            <label class="col-4 form-control-lg"> Nom de la banque </label>
                            <div class="col form-control">{{ banque.nomBanque }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

